extends ../layouts/layout

block content
    form#form(action="/medicamento/crear" method="POST")
        .form-group
            label(for="nombre") Nombre
            input.nombre(type="text" name="nombre" required)

        .form-group
            label(for="apellido") Apellido
            input.apellido(type="text" name="apellido" required)

        .form-group
            label(for="documento") Documento
            input.documento(type="text" name="documento" required)

        .form-group
            label(for="fechaNacimiento") Fecha de Nacimiento
            input.fechaNacimiento(type="date" name="fechaNacimiento" required)

        .form-group
            label(for="domicilio") Domicilio
            input.domicilio(type="text" name="domicilio" required)

        .form-group
            label(for="sexo") Sexo
            select.sexo(name="sexo" required)
                option(value="" disabled selected) Seleccione el sexo
                option(value="M") Masculino
                option(value="F") Femenino

        .form-group
            label(for="profesion") Profesion
            input.profesion(type="text" name="profesion" required)

        .form-group
            label(for="idREFEPS") idREFEPS
            input.idREFEPS(type="number" name="idREFEPS" required)

        label(for="especialidades") Especialidades
        .especialidades-disponibles
            each especialidad in especialidades
                .especialidad-disponible(data-especialidad-id=especialidad.id)= especialidad.descripcion
        
        .especialidades-seleccionadas

        .div-botones
            button.crear(type="submit") Crear Profesional
            button.resetear(type="reset") Limpiar campos

    script(src="/script/crearProfesional.js")
    script(src="/script/agregarEspecialidades.js")